<div class="row">
  <div class="col-md-2">
    <%= link_to "Add new event", new_event_path, class: "btn btn-success" %>
  </div>
  <div class="col-md-8">
    <!-- col-md-offset-2 -->
    <div class="panel panel-primary">
      <div class="panel-heading">
        Your Events
      </div>
      <div class="panel-body">
        <% @events.each do |event| %>
          <div class="col-md-6">
            <h4><%= event.name %></h4>
            <p><%= event.description %></p>
            <p><label>Location :</label> <%= event.location %></p>
            <p><label>When :</label> <%= event.event_time_desc %></p>
            <p><label>Price :</label> &euro; <%= event.price %></p>
            <p><label>Capacity :</label> <%= event.capacity %></p>
            <p>
              <%= link_to "View", event, class: "btn btn-default" %>
            </p>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>
