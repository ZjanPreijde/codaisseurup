<% if current_user != @event.user %>
  <div class="panel panel-primary">
    <div class="panel-heading">Register</div>

    <div class="panel-body">
      <%#= render 'registrations/form' %>
    </div>
  </div>
<% end %>

<div class"row"="class" row""="row" "">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h4><%= @event.name %></h4>
      </div>

      <div class="panel-body">
        <!-- About -->
        <!-- <h4>About</h4> -->
        <p><%= @event.description %></p>

        <!-- Main Info -->
        <!-- <h4>Main Info</h4> -->
        <div class="col-md-6">
          <p>
            <label>Location:</label>
            <%= @event.location %></p>
          <p>
            <label>When:</label>
            <%= @event.event_time_desc %></p>
          <p>
            <label>Capacity:</label>
            <%= @event.capacity %>
            <%= @event.capacity > 1 ? "guests" : "guest" %></p>
          <p>
            <label>Host:</label>
            <%= @event.user.email %></p>
        </div>

        <div class="col-md-6">
          <!-- Amenities -->
          <p>
            <label>Price:</label> &euro;
            <%= @event.price %></p>
          <p>
          <label>Amenities:</label>
          <ul class="amenities">
            <li><%= !@event.includes_food ? ("<s>Food</s>").html_safe : "Food" %></li>
            <li><%= !@event.includes_drinks ? ("<del>Drinks</del>").html_safe : "Drinks" %></li>
          </ul>
          </p>
          <p>
          <label>Categories</label>
          <% @categories.each do |category| %>
            <span class="label label-success"><%= category.name %></span>
          <% end %>
          </p>
          <label>Status: </label>
          <%= !@event.active ? ("<del>Unpublished</del>").html_safe : "Published" %>
        </div>
        <!-- Status -->
      </div>
    </div>

    <%= link_to "Update", edit_event_path(@event), class: "btn btn-default" %>
    <%= link_to "Back", events_path, class: "btn btn-default" %>

  </div>
</div>
