<!-- app/views/photos/_list.html.erb -->

<% if @photos %>
  <div class = "col-md-12">
    <% @photos.each do |photo| %>
      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="col-md-2">
              <%= link_to "Delete", photo_path( photo.id ), class: "btn btn-default",
                method: :delete, data: { confirm: "Are you sure?" } %>
            </div>
            <div class="col-md-4">
              <%= image_tag photo.image.thumbnail %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
